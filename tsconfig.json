{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/helpers/*": ["./tools/helpers/*"],
      "@/hooks/*": ["./tools/hooks/*"],
      "@/sanity": ["./tools/sanity"],
      "@/projections/*": ["./tools/sanity/projections/*"],
      "@/sass/*": ["./tools/sass/*"],
      "@/types/*": ["./types/*"],
      "@/assets/*": ["./assets/*"],
      "@/config/*": ["./config/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
