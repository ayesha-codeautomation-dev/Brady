{
  "name": "next-bolognese",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:all": "next lint --dir .",
    "lint:fix": "next lint --fix",
    "storybook": "storybook dev -p 3001 --config-dir ./tools/storybook",
    "storybook:build": "storybook build",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write --list-different .",
    "ts:watch": "yarn tsc --watch"
  },
  "dependencies": {
    "@next/third-parties": "^14.1.4",
    "@portabletext/react": "3.0.15",
    "@sanity/client": "^7.13.0",
    "@sanity/color-input": "^3.1.1",
    "@sanity/icons": "^2.11.4",
    "@sanity/image-url": "1.0.2",
    "@sanity/table": "^1.1.2",
    "@sanity/types": "^3.35.2",
    "@sanity/ui": "^2.8.8",
    "@sanity/vision": "3.35.2",
    "embla-carousel-react": "8.5.1",
    "framer-motion": "10.18.0",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "js-cookie": "^3.0.5",
    "lodash.get": "^4.4.2",
    "next": "^14.2.5",
    "next-sanity": "8.4.6",
    "next-sanity-image": "^6.1.1",
    "react": "^18.3",
    "react-dom": "^18.3",
    "react-hook-form": "7.51.1",
    "react-icons": "^5.0.1",
    "react-player": "^2.15.1",
    "resend": "^4.4.0",
    "sanity": "^3.53.0",
    "sanity-plugin-asset-source-unsplash": "2.0.1",
    "sanity-plugin-icon-manager": "^1.4.0",
    "sanity-plugin-media": "^2.2.5",
    "sanity-plugin-tags": "2.0.1",
    "slugify": "^1.6.6",
    "styled-components": "^6.1.19",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "7.6.17",
    "@storybook/addon-interactions": "7.6.17",
    "@storybook/addon-links": "7.6.17",
    "@storybook/addon-onboarding": "1.0.11",
    "@storybook/blocks": "7.6.17",
    "@storybook/manager-api": "7.6.17",
    "@storybook/nextjs": "7.6.17",
    "@storybook/react": "7.6.17",
    "@storybook/testing-library": "0.2.2",
    "@storybook/theming": "7.6.17",
    "@svgr/webpack": "8.1.0",
    "@types/js-cookie": "^3",
    "@types/lodash.get": "^4",
    "@types/node": "20.11.30",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.4",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "sass": "1.72.0",
    "schema-dts": "^1.1.2",
    "storybook": "7.6.17",
    "typescript": "5.4.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "next/core-web-vitals"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn"
      ],
      "jsx-a11y/alt-text": [
        "off"
      ],
      "react/jsx-first-prop-new-line": [
        2,
        "multiline"
      ],
      "react/jsx-max-props-per-line": [
        2,
        {
          "maximum": 1,
          "when": "multiline"
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto"
  },
  "packageManager": "yarn@4.1.1"
}
